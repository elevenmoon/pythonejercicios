def informacion(nombre, cargo='nada'):
    print(f'soy {nombre} y soy {cargo}')

informacion('Roman', 'programador')

informacion('Roman') #debe generar un error si paso un solo parametro

def miplatofavorito(nombre, plato):
    print(f'soy {nombre} y mi plato favorito es {plato}')

miplatofavorito('Roman', 'Pasta')